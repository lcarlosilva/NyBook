<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.details.BookDetailsActivity">

    <include
        layout="@layout/include_toolbar" />

    <TextView
        android:id="@+id/tv_lbl_title"
        style="@style/LabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:text="@string/lbl_tv_title"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarMain" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/tv_lbl_title"
        app:layout_constraintTop_toBottomOf="@id/tv_lbl_title"
        tools:text="TEXTO" />

    <TextView
        android:id="@+id/tv_lbl_description"
        style="@style/LabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:text="@string/lbl_tv_description"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_lbl_description"
        app:layout_constraintTop_toBottomOf="@id/tv_lbl_description"
        tools:text="TEXTO" />

    <TextView
        android:id="@+id/tv_lbl_author"
        style="@style/LabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:text="@string/lbl_tv_author"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_lbl_author"
        app:layout_constraintTop_toBottomOf="@id/tv_lbl_author"
        tools:text="TEXTO" />

</androidx.constraintlayout.widget.ConstraintLayout>